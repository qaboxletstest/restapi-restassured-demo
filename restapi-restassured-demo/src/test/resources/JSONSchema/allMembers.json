{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "minItems": 1,
    "uniqueItems": true,
    "items": [
        {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "multipleOf": 1,
                    "minimum": 1
                },
                "name": {
                    "type": "string",
                    "minLength": 4,
                    "maxLength": 25,
                    "pattern": "^[a-zA-Z ]*$"
                },
                "gender": {
                    "type": "string",
                    "pattern": "^([Ff]e)?[Mm]ale$"
                }
            },
            "additionalProperties": false,
            "required": [
                "id",
                "name",
                "gender"
            ]
        }
    ]
}